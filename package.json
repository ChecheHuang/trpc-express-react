{
  "name": "trpc-react-express",
  "version": "1.0.0",
  "workspaces": [
    "react",
    "express"
  ],
  "scripts": {
    "build:client": "npm run build -w react",
    "build:server": "npm run build -w express",
    "build": "run-s build:server build:client",
    "dev:server": "npm run dev -w express",
    "dev:client": "npm run dev -w react",
    "dev": "run-p dev:*",
    "prepare": "husky install",
    "start": "npm run start -w express",
    "cma": "git add . && git-cz"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^18.4.3",
    "commitizen": "^4.3.0",
    "commitlint": "^18.4.3",
    "commitlint-config-cz": "^0.13.3",
    "cz-customizable": "^7.0.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "config": {
      "commitizen": {
        "path": "node_modules/cz-customizable"
      }
    }
  }
}